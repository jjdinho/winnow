<div data-controller="signup" class="-form">
  <div class="progress-bar-container">
    <div class="progress-bar"></div>
    <div data-target="signup.progressBar" class="progress-bar-2"></div>
    <div class="progress-bar-3"></div>
    <div class="progress-bar-4"></div>
    <div class="progress-bar-dot"></div>
  </div>
  <%= form_tag(awesome_llama_3_path, method: 'post', data: { target: 'signup.form' }) do %>
    <%= hidden_field_tag 'hex', params[:hex] %>
    <!-- Keyword -->
    <div data-target="signup.formContainer" class="animated fadeInLeft">
      <p class="fs-1_5em">What news are you interested in? <small>think <em>keyword</em></small></p>
      <%= text_field_tag 'keyword', nil, placeholder: "south china sea", class: 'winnow-text-input focus-me',
          id: 'inputKeyword' %>
      <button type="submit" data-action="click->signup#submitKeyword" id="submitKeywordBtn" class="btn btn-winnow">
        <i class="fas fa-arrow-right"></i>
      </button>
    </div>
    <!-- end keyword -->
  <% end %>
</div>
